{
  "name": "maci-cli",
  "version": "2.5.0",
  "description": "CLI utilities for MACI",
  "main": "build/ts/index.js",
  "exports": {
    ".": {
      "types": "./build/ts/index.d.ts",
      "default": "./build/ts/index.js"
    },
    "./sdk": {
      "types": "./build/ts/sdk/index.d.ts",
      "default": "./build/ts/sdk/index.js"
    }
  },
  "bin": {
    "maci-cli": "./build/ts/index.js"
  },
  "files": [
    "build",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "cp package.json ./build && mkdir -p ./zkeys",
    "types": "tsc -p tsconfig.json --noEmit",
    "test:unit": "NODE_ENV=test nyc ts-mocha --exit tests/unit/*.test.ts",
    "test:airdrop": "NODE_ENV=test nyc ts-mocha --exit tests/unit/airdrop.test.ts",
    "test:genPubKey": "NODE_ENV=test ts-mocha --exit tests/unit/genPubKey.test.ts",
    "test:genKeypair": "NODE_ENV=test ts-mocha --exit tests/unit/genKeyPair.test.ts",
    "test:joinPoll": "NODE_ENV=test ts-mocha --exit tests/unit/joinPoll.test.ts",
    "test:timeTravel": "NODE_ENV=test ts-mocha --exit tests/unit/timeTravel.test.ts",
    "test:fundWallet": "NODE_ENV=test ts-mocha --exit tests/unit/fundWallet.test.ts",
    "test:signup": "NODE_ENV=test ts-mocha --exit tests/unit/signup.test.ts",
    "test:utils": "NODE_ENV=test ts-mocha --exit tests/unit/utils.test.ts",
    "docs": "typedoc --plugin typedoc-plugin-markdown --options ./typedoc.json"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^13.1.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.5",
    "hardhat": "^2.22.19",
    "maci-circuits": "^2.5.0",
    "maci-contracts": "^2.5.0",
    "maci-core": "^2.5.0",
    "maci-crypto": "^2.5.0",
    "maci-domainobjs": "^2.5.0",
    "maci-sdk": "^0.0.1",
    "prompt": "^1.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.9",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.10",
    "@types/prompt": "^1.1.9",
    "@types/snarkjs": "^0.7.9",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.2",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0",
    "snarkjs": "^0.7.5",
    "ts-mocha": "^11.1.0",
    "typescript": "^5.8.2"
  },
  "nyc": {
    "reporter": [
      "text",
      "lcov"
    ],
    "extensions": [
      ".ts"
    ],
    "all": true,
    "exclude": [
      "**/*.js",
      "**/*.d.ts",
      "hardhat.config.ts",
      "tests/**/*.ts",
      "ts/index.ts"
    ],
    "branches": ">50%",
    "lines": ">50%",
    "functions": ">50%",
    "statements": ">50%"
  }
}
